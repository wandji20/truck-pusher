<tr id="<%= dom_id(user) %>">
  <td><%= user.full_name %></td>
  <td><%= user.telephone %></td>
  <td><%= user.branch_name %></td>
  <td><%= user.role %></td>
  <td><%= user.invited_by_name %></td>
  <% if can? :manage, @current_enterprise %>
    <td>
      <%= button_to t("enterprises.users.remove"), remove_enterprise_user_path(user), method: :delete,
                form_class: 'btn link !p-0',
                data: { turbo_confirm: t("enterprises.users.delete_confirm", user: sanitize(user.full_name)) } %>
    </td>
  <% end %>
</tr>