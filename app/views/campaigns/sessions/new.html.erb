<div class="flex w-full flex-col justify-center mt-6">
  <div class="mx-auto sm:w-full">
    <h2 class="mt-6 text-center text-2xl/9 font-bold tracking-tight text-gray-900">
      <%= t('.title') %>
    </h2>
  </div>

  <div class="sm:mx-auto sm:w-full sm:max-w-[480px]">
    <div class="px-6 py-12 sm:px-12">

      <%= form_with url: campaigns_login_path do |form| %>
        <div class="form-group">
          <%= form.label :email_field, t('.email.label'), class: "form-label" %>
          <%= form.email_field :email, required: true, placeholder: t('.email.placeholder'),
                class: "form-control", value: params[:email] %>
        </div>

        <div class="form-group">
          <div class="flex w-full justify-between">
            <%= form.label :password, t('.password.label'), class: "form-label !inline-block" %>

            <%= link_to t('.forgot_password'), new_campaigns_password_path,
                          class: "link text-sm/6" %>
          </div>

          <%= form.password_field :password, required: true, placeholder: t('.password.placeholder'),
                class: "form-control", autocomplete: "password" %>
        </div>

        <div class="form-group">
          <%= form.submit t('.submit'), class: "btn btn-primary rounded-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

