<section class="flex flex-col pt-2 px-4 mt-3">
  <h2 class="text-2xl/9 font-semibold tracking-tight text-gray-900">
    <%= t('.title') %>
  </h2>

  <div class="bg-tp-soft-gray grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 rounded w-full p-2 mt-3">
    <% @merchants.each do |merchant| %>
      <div class="rounded-lg bg-white shadow">
        <div class="flex w-full justify-between space-x-6 p-4">
          <div class="flex-1">
            <h3 class="truncate text-sm font-medium text-gray-900">
              <%= merchant.name %>
            </h3>

            <p class="mt-1 line-clamp-2 text-sm text-gray-500">
              <%= merchant.description %>
            </p>

            <p class="mt-1 truncate text-gray-500 text-sm flex items-center gap-2">
              <%= render "shared/svgs/location" %>
              <%= merchant.city %>
            </p>
          </div>

          <%= link_to t(".edit"), edit_campaigns_merchant_path(merchant), class: "link text-sm/6" %>
        </div>
      </div>
    <% end %>

  </div>
</section>
