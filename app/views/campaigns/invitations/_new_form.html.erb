<%= form_with model: marketer, url: campaigns_invitations_path, id: dom_id(marketer) do |form| %>
  <div class="form-group">
    <%= form.label :email, t('.email.label'), class: "form-label" %>

    <%= form.email_field :email,
          placeholder: t('.email.placeholder'), autocomplete: false, required: true, autofocus: true,
          class: "form-control #{'is-invalid' if marketer.errors.messages[:email].present?}" %>
    <% if marketer.errors.messages[:email].present? %>
      <div class="invalid-feedback">
        <% marketer.errors.messages[:email].each do |message| %>
          <span><%= message %></span>
        <% end %>
      </div>
    <% end %>
  </div>

  <%= form.submit t(".submit"), class: "mb-6 btn btn-primary" %>
<% end %>
