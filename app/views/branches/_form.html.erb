
<%= form_with model: branch, id: do |form| %>

  <div class="form-group">
    <%= form.label :name, t('.name.label'), class: "form-label" %>
    <%= form.text_field :name, required: true, autofocus: true,
          autocomplete: "name", placeholder: t('.name.placeholder'),
          class: "form-control #{'is-invalid' if branch.errors.messages[:name].present?}" %>
    <% if branch.errors.messages[:name].present? %>
      <div class="invalid-feedback">
        <% branch.errors.messages[:name].each do |message| %>
          <span><%= message %></span>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :telephone, t('.telephone.label'), class: "form-label" %>

    <%= form.text_field :telephone, required: false,
          placeholder: t('.telephone.placeholder'), autocomplete: false,
          class: "form-control #{'is-invalid' if branch.errors.messages[:telephone].present?}",
          data: { controller: "format-decimals", action: "format-decimals#formatValue" } %>
    <% if branch.errors.messages[:telephone].present? %>
      <div class="invalid-feedback">
        <% branch.errors.messages[:telephone].each do |message| %>
          <span><%= message %></span>
        <% end %>
      </div>
    <% end %>
  </div>

  <%= form.submit t(".submit.#{branch.persisted? ? 'update' : 'create'}"), class: "btn btn-primary mb-5" %>
<% end %>

